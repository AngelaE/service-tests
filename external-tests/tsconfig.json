{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "include": ["./test", "./src"],
  "exclude": ["./node_modules"],

  "compilerOptions": {
    "lib": ["es2020", "DOM", "ES6"],
    "module": "commonjs",
    "target": "es6",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  }
}